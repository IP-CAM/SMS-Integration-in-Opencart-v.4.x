<!-- Run command: ant build -->
<project name="smsto" default="build" basedir="./smsto">
    
    <property name="destfile" value="../smsto.ocmod.zip"/>
    
    <target name="build" description="Create an installable package for the ${name} project" >
        <echo message="Archiving package" />
        <delete file="${destfile}" />
        <zip destfile="${destfile}" basedir="${basedir}" />
    </target>
    
</project>
