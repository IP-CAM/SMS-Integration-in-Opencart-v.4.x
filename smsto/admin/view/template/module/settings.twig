{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="float-end">
                <button type="submit" form="form-module" data-bs-toggle="tooltip" title="{{ button_save }}"
                    class="btn btn-primary"><i class="fas fa-save"></i></button>
                <a href="{{ back }}" data-bs-toggle="tooltip" title="{{ button_back }}"
                    class="btn btn-light"><i class="fas fa-reply"></i></a>
            </div>
            <h1>{{ smsto_heading_title }}</h1>
            <ol class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                <li class="breadcrumb-item"><a href="{{ breadcrumb . href }}">{{ breadcrumb . text }}</a></li>
                {% endfor %}
            </ol>
        </div>
    </div>
    <div class="container-fluid">
        <div class="card">
            <div class="card-header"><i class="fas fa-pencil-alt"></i> {{ text_edit }}</div>
            <div class="card-body">
                <form id="form-module" action="{{ save }}" method="post" data-oc-toggle="ajax">
					<div class="row mb-3">
                        <label for="input-status" class="col-sm-2 col-form-label">{{ entry_status }}</label>
                        <div class="col-sm-10">
                            <select name="module_smsto_status" id="input-status" class="form-select">
                                <option value="1" {% if module_smsto_status %} selected="selected" {% endif %}>
                                    {{ text_enabled }}</option>
                                <option value="0" {% if not module_smsto_status %} selected="selected" {% endif %}>
                                    {{ text_disabled }}</option>
                            </select>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="input-module_smsto_api_key"
                            class="col-sm-2 col-form-label">{{ entry_api_key }}</label>
                        <div class="col-sm-10">
                            <input type="password" name="module_smsto_api_key" value="{{ module_smsto_api_key }}"
                                id="input-module_smsto_api_key" class="form-control" />
                            <div id="error-module_smsto_api_key" class="invalid-feedback"></div>
                            <small>{{ entry_api_key_desc }}</small>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="input-module_smsto_show_reports"
                            class="col-sm-2 col-form-label">{{ entry_show_reports }}</label>
                        <div class="col-sm-10">
                            <select name="module_smsto_show_reports" id="input-module_smsto_show_reports"
                                class="form-select">
                                <option value="1" {% if module_smsto_show_reports == 1 %} selected="selected"
                                    {% endif %}>{{ text_yes }}</option>
                                <option value="0" {% if module_smsto_show_reports == 0 %} selected="selected"
                                    {% endif %}>{{ text_no }}</option>
                            </select>
                        </div>
                    </div>
					<div class="row mb-3">
                        <label for="input-module_smsto_show_people"
                            class="col-sm-2 col-form-label">{{ entry_show_people }}</label>
                        <div class="col-sm-10">
                            <select name="module_smsto_show_people" id="input-module_smsto_show_people"
                                class="form-select">
                                <option value="1" {% if module_smsto_show_people == 1 %} selected="selected"
                                    {% endif %}>{{ text_yes }}</option>
                                <option value="0" {% if module_smsto_show_people == 0 %} selected="selected"
                                    {% endif %}>{{ text_no }}</option>
                            </select>
                        </div>
                    </div>                    
                </form>
            </div>
        </div>
    </div>
</div>
{{ footer }}
